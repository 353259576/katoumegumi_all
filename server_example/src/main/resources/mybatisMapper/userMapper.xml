<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.katoumegumi.java.lx.mapper.UserMapper">


    <resultMap id="userBaseResultMap" type="user">
        <id property="name" column="name"/>
        <result property="password" column="password"/>
    </resultMap>


    <sql id="baseUserSql">
        u.name,
        u.password
    </sql>

    <select id="selectUserList" resultMap="userBaseResultMap" parameterType="user">
        select
        <include refid="baseUserSql"></include>
        from ws_user u
        <where>
            u.name = #{user.name}
        </where>
    </select>


</mapper>
